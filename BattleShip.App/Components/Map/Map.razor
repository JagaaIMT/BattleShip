<!-- Components/Map/Map.razor -->
@code {
    [Parameter]
    public int[,] GridData { get; set; } // Matrice à afficher

    private void OnCellClick(int row, int col)
    {
        Console.WriteLine($"Clicked on cell: ({row}, {col}) and the value is {GridData[row, col]}");
    }
}

<table style="border-collapse: collapse;">
    @for (int row = 0; row < GridData.GetLength(0); row++)
    {
        <tr>
            @for (int col = 0; col < GridData.GetLength(1); col++)
            {
                @{
                    int _row = row;
                    int _col = col;
                }
                <td style="padding: 0; margin: 0; border: none;">
                    <button @onclick="() => OnCellClick(_row, _col)" style="width: 40px; height: 40px; margin: 0; padding: 0;">
                        &nbsp;
                    </button>
                </td>
            }
        </tr>
    }
</table>
